
input type:touchpad {
    tap enabled
    tap_button_map lrm
    drag enabled
    drag_lock disabled
    dwt disabled
    middle_emulation enabled
    natural_scroll enabled
    scroll_method two_finger
    scroll_factor 0.25
    click_method clickfinger
}

input type:keyboard {
    xkb_layout latam
}

seat * xcursor_theme Bibata-Modern-Classic 24

